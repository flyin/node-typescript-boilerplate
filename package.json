{
  "name": "typescript-boilerplate",
  "version": "0.0.1",
  "description": "typescript boilerplate",
  "main": "bin/server.js",
  "repository": "https://github.com/flyin/node-typescript-boilerplate",
  "author": "Alexander Polesov",
  "license": "MIT",
  "scripts": {
    "start:dev": "concurrently \"npm run tsc:watch\" \"APP_ENV=API npm run start:dev-server\" \"APP_ENV=WORKER npm run start:dev-worker\"",
    "start:dev-server": "just-wait -p dist/server.js && nodemon --watch dist dist/server.js",
    "start:dev-worker": "just-wait -p dist/worker.js && nodemon --watch dist dist/worker.js",
    "tsc:watch": "tsc -w"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "koa": "^2.0.1",
    "koa-compose": "^3.2.1",
    "koa-router": "^7.1.0",
    "kue": "^0.11.5",
    "moment": "^2.17.1",
    "mongoose": "^4.8.5",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/dotenv": "^2.0.20",
    "@types/koa": "^2.0.38",
    "@types/kue": "^0.9.31",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^4.7.7",
    "@types/node": "^7.0.5",
    "@types/winston": "^2.2.0",
    "concurrently": "^3.4.0",
    "just-wait": "^1.0.11",
    "nodemon": "^1.11.0",
    "tslint": "^4.5.1",
    "tslint-config-standard": "^4.0.0",
    "typescript": "^2.2.1"
  }
}
